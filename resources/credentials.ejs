<%- include('./components/wrapper') %>
  <main class="flex-1 bg-gray-800">
    <div class="py-6">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
        <!-- Content -->
        <p class="text-gray-400">Email/Username: <code class="text-white"><%= user.email %></code></p>
        <p class="text-gray-400">Password: <code class="text-white"><%= password %></code></p>
        <div class="inline-flex rounded-md shadow-sm mt-4" role="group">
          <a href="../reset-password" type="button" class="transition px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-blue-500 rounded-l-lg hover:bg-blue-600 hover:text-white focus:z-10 focus:ring-2 focus:ring-blue-600 focus:text-white"> 
            Reset password 
          </a>
          <a href="../panel" type="button" class="transition px-4 py-2 text-sm font-medium text-white bg-gray-700/75 border border-gray-700/50 hover:bg-gray-700/50 hover:text-white focus:z-10 focus:ring-2 focus:ring-blue-600 focus:text-white"> 
            Panel 
          </a>
          <a href="../remove-account" type="button" class="transition px-4 py-2 text-sm font-medium text-white bg-red-700/75 border rounded-r-lg border-red-700/50 hover:bg-red-700/50 hover:text-white focus:z-10 focus:ring-2 focus:ring-blue-600 focus:text-white"> 
            Delete your account 
          </a>
        </div>
      </div>
    </div>
  </main>
<%- include('./components/footer') %>
